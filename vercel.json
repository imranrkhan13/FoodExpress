{
  "version": 2,
  "builds": [
    { "src": "backend/src/server.ts", "use": "@vercel/node" },
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/frontend/dist/index.html" },
    { "src": "/api/(.*)", "dest": "backend/src/server.ts" }
  ]
}
